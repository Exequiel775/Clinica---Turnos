<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Sistema.Sanatorio</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Roboto+Slab:wght@500&display=swap" rel="stylesheet">
</head>
<body>
    <header>
    <nav
        style="background-color: #2c2c54;" class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light text-white border-bottom box-shadow mb-3">
        <div class="container">
            <a class="navbar-brand" href="/Home/Index"
                style="font-family: 'Arimo', sans-serif;"></a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse"
                aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1">
                    <li class="nav-item">
                        <a class="nav-link text-white" href="/Home/Index"
                            style="font-family: 'Roboto Slab', serif; border-right:2px solid #f7f1e3">HOME</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white" style="font-family:'Roboto Slab', serif; border-right:2px solid #f7f1e3" href="#">TURNOS</a>
                    </li>
                     <li class="nav-item">
                         <a class="nav-link text-white" style="font-family: 'Roboto Slab', serif; border-right:2px solid #f7f1e3" href="#">RECEPCIONISTAS</a>
                    </li>
                    <li class="nav-item">
                        <div class="dropdown show">
                            <a class="btn dropdown-toggle text-white" href="#" role="button" id="menuParametricas"
                            data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" style="font-family:'Roboto Slab', serif;">
                                PARAMETRICAS
                            </a>

                            <div class="dropdown-menu" id="menuParametricas">
                                <a class="dropdown-item" href="/Provincia/Index">Provincias</a>
                                <a class="dropdown-item" href="/Localidad/Index">Localidades</a>
                            </div>
                        </div>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
</header>
    <!--<div class="">-->
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    <!--</div>-->

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2021 - Sistema.Sanatorio - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
