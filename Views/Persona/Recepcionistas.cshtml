                            </svg>
                        </i>
                        <h5 class="pl-2">Gonzalez, Rodrigo Exequiel</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        <form action="">
                            <div class="datos-recepcionista">
                                <div class="form-group">
                                    <h5>DATOS DEL RECEPCIONISTA</h5>
                                    <hr class="bg-secondary">
                                </div>
                                <div class="row">
                                    <div class="col-12 col-sm-12 col-lg-4 col-xl-4 col-md-4">
                                        <div class="form-group">
                                            <label>Nombre</label>
                                            <input type="text" class="form-control" name="Nombre" id="nombre">
                                        </div>
                                    </div>
                                    <div class="col-12 col-sm-12 col-lg-4 col-xl-4 col-md-4">
                                        <div class="form-group">
                                            <label>Apellido</label>
                                            <input type="text" class="form-control" name="Apellido" id="apellido">
                                        </div>
                                    </div>
                                    <div class="col-12 col-sm-12 col-lg-4 col-xl-4 col-md-4">
                                        <div class="form-group">
                                            <label>DNI</label>
                                            <input type="number" class="form-control" name="Dni" id="dni">
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-12 col-sm-12 col-lg-6 col-xl-6 col-md-6">
                                        <div class="form-group">
                                            <label>Fecha Nacimiento</label>
                                            <input type="date" class="form-control" name="FechaNacimiento" id="fechaNacimiento">
                                        </div>
                                    </div>
                                    <div class="col-12 col-sm-12 col-lg-6 col-xl-6 col-md-6">
                                        <div class="form-group">
                                            <label>Email</label>
                                            <input type="email" class="form-control" name="Email" id="email">
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-12 col-sm-12 col-lg-6 col-xl-6 col-md-6">
                                        <label>Celular</label>
                                        <input type="text" class="form-control" name="Celular" id="celular">
                                    </div>
                                    <div class="col-12 col-sm-12 col-lg-6 col-xl-6 col-md-6">
                                        <label>Telefono</label>
                                        <input type="text" class="form-control" name="Telefono" id="telefono">
                                    </div>
                                </div>
                                <div class="mt-2 form-group">
                                    <h5>LOCALIDAD</h5>
                                    <hr class="bg-secondary">
                                </div>
                                <div class="row">
                                    <div class="col-12 col-sm-12 col-md-6 col-lg-6 col-xl-6">
                                        <label>Provincia</label>
                                        <select class="form-control" id="cmbProvincia">                                            
                                        </select>
                                    </div>
                                    <div class="col-12 col-sm-12 col-md-6 col-lg-6 col-xl-6">
                                        <label>Localidad</label>
                                        <select class="form-control" id="cmbLocalidad" name="Localidad">

                                        </select>
                                    </div>
                                </div>
                                <div class="mt-2 form-group">
                                    <h5>TURNO</h5>
                                    <hr class="bg-secondary">
                                </div>
                                <div class="form-group">
                                    <label>Turno</label>
                                    @Html.DropDownList("TurnoRecepcionista", 
                                    Html.GetEnumSelectList<Constantes.Clases.TurnoRecepcionista>(),
                                    htmlAttributes: new { @class = "form-control", @id = "cmbTurno" })
                                </div>
                            </div>
                        </form>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-danger" data-dismiss="modal">Cerrar</button>
                        <button type="button" class="btn btn-primary">Modificar</button>
                    </div>
                </div>
            </div>
        </div>
</div>


