@model Servicios.Interface.Localidad.LocalidadDto

@{
    ViewData["Title"] = "Localidades";
}

<div class="row">
    <div class="col-12 col-sm-12 col-md-5 col-lg-5 col-xl-5">
        <div class="text-center">
            <h4>NUEVA LOCALIDAD</h4>
        </div>
        <form asp-controller="Localidad" asp-action="Add" method="POST" id="form-localidad">
            <div class="form-group">
                <label>Provincia</label>
                    <select id="cmbProvincia" name="ProvinciaId" class="form-control">
                        <option value="-1">SELECCIONE UNA PROVINCIA</option>
                    </select>
            </div>
            <div class="form-group">
                <label>Descripción</label>
                <input type="text" class="form-control" name="Descripcion">
            </div>
            <div class="form-group">
                <input type="submit" class="btn btn-success" value="GRABAR">
            </div>
        </form>
    </div>
    <div class="col-12 col-sm-12 col-md-7 col-lg-7 col-xl-7">
        <div class="table-responsive">
            <table class="table table-sm table-striped">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Descripción</th>
                        <th>Provincia</th>
                    </tr>
                </thead>
                <tbody id="tabla-localidad">
                </tbody>
            </table>
        </div>
    </div>
</div>

<script>var exports = { "__esModule": true };</script>
<script src="~/Scripts/Localidad.js"></script>