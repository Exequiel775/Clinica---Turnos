@model Servicios.Interface.Localidad.LocalidadDto

@{
    ViewData["Title"] = "Localidades";
}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

<div class="row bg-white">
    <div class="col-12 col-sm-12 col-md-5 col-lg-5 col-xl-5">
        <div class="text-center">
            <h4>NUEVA LOCALIDAD</h4>
        </div>
        <form asp-controller="Localidad" asp-action="Add" method="POST" id="form-localidad">
            <div class="form-group">
                <label>Provincia</label>
                    <select id="cmbProvincia" name="ProvinciaId" class="form-control">
                        <option value="-1">SELECCIONE UNA PROVINCIA</option>
                    </select>
            </div>
            <div class="form-group">
                <label>Descripci贸n</label>
                <input type="text" class="form-control" name="Descripcion">
            </div>
            <div class="form-group">
                <input type="submit" class="btn btn-success" value="GRABAR">
            </div>
        </form>
    </div>
    <div class="col-12 col-sm-12 col-md-7 col-lg-7 col-xl-7">
        <div class="table-responsive">
            <table class="table table-sm table-striped">
                <thead>
                    <tr>
                        <th>Descripci贸n</th>
                        <th>Provincia</th>
                        <th>Acci贸nes</th>
                    </tr>
                </thead>
                <tbody id="tabla-localidad">
                </tbody>
            </table>
        </div>
    </div>
</div>

<!-- Modal -->
<div class="modal fade" id="modalLocalidad" tabindex="-1" role="dialog" aria-labelledby="modalLocalidadLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header bg-danger text-white">
        <h5 class="modal-title" id="exampleModalLabel">Modificar Localidad</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
              <div class="form-group">
                  <label>Provincia</label>
                  <select class="form-control" name="NuevaProvincia" id="cmbNuevaProvincia">
                  </select>
              </div>
              <div class="form-group">
                  <label>Descripci贸n</label>
                  <input type="text" class="form-control" name="NuevaDescripcion" id="txtNuevaDescripcion">
              </div>
              <hr>
              <div class="form-group">
                  <input type="button" class="btn btn-success" id="modificarLocalidad" data-dismiss="modal" value="MODIFICAR">
              </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Salir</button>
      </div>
    </div>
  </div>
</div>

<style>
    body{
        background: rgba(222, 222, 222);
    }
</style>

<script src="~/Scripts/LocalidadJs/main.js"></script>
