@model Servicios.Interface.Persona.MedicoDto

@{
    ViewData["Title"] = "Nuevo Medico";
}

<div class="container-lg">
    <div class="bg-dark p-3">
        <h3 class="text-center text-white display-4">Nuevo Medico</h3>
    </div>
</div>

<div class="container mt-5">
    <form asp-action="NuevoMedico" asp-asp-controller="Medicos" method="POST" id="formulario">
        <div class="row">
            <div class="col-6">
                <h3 class="text-danger">Datos personales</h3>
                <hr>
                <div class="row">
                    <div class="col-6">
                        <div class="form-group">
                            <label>Nombre</label>
                            <input type="text" class="form-control" name="Nombre">
                        </div>
                    </div>
                    <div class="col-6">
                        <div class="form-group">
                            <label>Apellido</label>
                            <input type="text" class="form-control" name="Apellido">
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-6">
                        <div class="form-group">
                            <label>DNI</label>
                            <input type="text" class="form-control" name="Dni">
                        </div>
                    </div>
                    <div class="col-6">
                        <div class="form-group">
                            <label>Fecha Nacimiento</label>
                            <input type="date" class="form-control" name="FechaNacimiento">
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-6">
                        <div class="form-group">
                            <label>Provincia</label>
                            <select class="form-control" name="ProvinciaId" id="provincia">
                                <option value="-1">Eliga una provincia</option>
                            </select>
                        </div>
                    </div>
                    <div class="col-6">
                        <div class="form-group">
                            <label>Localidad</label>
                            <select class="form-control" name="LocalidadId" id="localidad">
                                <option value="-1">Seleccione una localidad</option>
                            </select>
                        </div>
                    </div>
                </div>
                <h3 class="text-danger">Establecimiento</h3>
                <hr>
                <div class="row">
                    <div class="col-6">
                        <div class="form-group">
                            <label>Especialidad</label>
                            <select class="form-control" name="EspecialidadId" id="especialidad">
                                <option value="-1">Seleccione Especialidad</option>
                            </select>
                        </div>
                    </div>
                    <div class="col-6">
                        <div class="form-group">
                            <label>Matricula</label>
                            <input type="text" class="form-control" name="Matricula">
                        </div>
                    </div>
                </div>
                <h3 class="text-danger">Contacto</h3>
                <hr>
                <div class="row">
                    <div class="col-12 col-sm-12 col-lg-6 col-xl-6 col-md-6">
                        <div class="form-group">
                            <label>Telefono</label>
                            <input type="text" class="form-control" name="Telefono">
                        </div>
                    </div>
                    <div class="col-12 col-sm-12 col-lg-6 col-xl-6 col-md-6">
                        <div class="form-group">
                            <label>Celular</label>
                            <input type="text" class="form-control" name="Celular">
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <label>Email</label>
                    <input type="email" class="form-control" name="Email">
                </div>
                <div class="form-group">
                    <input type="submit" class="btn btn-success" value="Registrar">
                </div>
            </div>
            <div class="col-6">
                <div class="titulo">

                </div>
                <div class="form-group mt-3">
                    <h3 class="text-danger">Suba una imagen</h3>
                    <hr>
                    <img id="imagen">
                </div>
                <div class="form-group mt-3">
                    <label class="form-label" for="file-imagen">Seleccione una imagen</label>
                    <input type="file" class="form-control" id="file-imagen" name="FileImage" />
                    <!--<input type="file" class="form-control" name="Imagen" id="file-imagen">-->
                </div>
            </div>
        </div>
    </form>
</div>

<style>
        .titulo {
            background-image: url('../~/Image/Medicos/default.jpg');
            background-repeat: no-repeat;
            background-size: 100%;
            background-position:center;
            height: 250px;
        }

        #imagen{
            background-repeat: no-repeat;
            background-size: 100%;
            background-position:center;
            width: auto;
            height: 250px;
        }
</style>

    <script type="text/javascript">
    const input_seleccion = document.getElementById('file-imagen');
    input_seleccion.addEventListener('change', () => {
        const archivos = input_seleccion.files;

        const primerImg = archivos[0];

        console.log(primerImg.name)
        
        const objectUrl = URL.createObjectURL(primerImg);

        document.querySelector('#imagen').src = objectUrl;
    });
    </script>

<script src="~/Scripts/MedicoJs/main.js"></script>

